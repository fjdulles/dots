txtblk='\[\e[0;30m\]' # Black - Regular
txtred='\[\e[0;31m\]' # Red
txtgrn='\[\e[0;32m\]' # Green
txtylw='\[\e[0;33m\]' # Yellow
txtblu='\[\e[0;34m\]' # Blue
txtpur='\[\e[0;35m\]' # Purple
txtcyn='\[\e[0;36m\]' # Cyan
txtwht='\[\e[0;37m\]' # White
bldblk='\[\e[1;30m\]' # Black - Bold
bldred='\[\e[1;31m\]' # Red
bldgrn='\[\e[1;32m\]' # Green
bldylw='\[\e[1;33m\]' # Yellow
bldblu='\[\e[1;34m\]' # Blue
bldpur='\[\e[1;35m\]' # Purple
bldcyn='\[\e[1;36m\]' # Cyan
bldwht='\[\e[1;37m\]' # White
unkblk='\[\e[4;30m\]' # Black - Underline
undred='\[\e[4;31m\]' # Red
undgrn='\[\e[4;32m\]' # Green
undylw='\[\e[4;33m\]' # Yellow
undblu='\[\e[4;34m\]' # Blue
undpur='\[\e[4;35m\]' # Purple
undcyn='\[\e[4;36m\]' # Cyan
undwht='\[\e[4;37m\]' # White
bakblk='\[\e[40m\]'   # Black - Background
bakred='\[\e[41m\]'   # Red
bakgrn='\[\e[42m\]'   # Green
bakylw='\[\e[43m\]'   # Yellow
bakblu='\[\e[44m\]'   # Blue
bakpur='\[\e[45m\]'   # Purple
bakcyn='\[\e[46m\]'   # Cyan
bakwht='\[\e[47m\]'   # White
txtrst='\[\e[0m\]'    # Text Reset

HOST=$(uname -n)  #Helps figure which host we are on
[ -f ~/.bash_host ] &&  source ~/.bash_host

unset PS1
#export PS1="\e[31m(FJD-\h/\d-\T \w) \e[0m"
#export PS1="${bldcyn}(\u ${bldcyn}\h ${txtgrn}\d-${bldgrn}\T ${txtred}\w${bldcyn})$txtrst "
#export PS1="${txtred}|${txtgrn}$HOST ${txtcyn}\u ${txtred}\w ${txtwht}\D{%a%e-%b}${txtblu}\D{%T}${txtylw}|\n| ${txtrst}"
export PS1="${txtred}|${txtgrn}$HOST ${txtcyn}\u ${txtred}\w ${txtwht}\D{%a%e-%b}${txtblu}\D{%T}${txtred}|\n| ${txtrst}"

